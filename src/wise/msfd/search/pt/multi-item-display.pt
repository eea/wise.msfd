<div
  tal:define="css_class view/css_class | string:"
  tal:attributes="class string:item-subform subform ${css_class};
  id view/form_name">

  <metal:block use-macro="context/@@ploneform-macros/fields" />

  <tal:block tal:condition="python: view.item ">
      <h3 tal:content="view/get_record_title">Article title here</h3>
      <div class="prev-next-row"
               tal:define="actions view/actions;
                      next actions/next | nothing;
                              prev actions/prev | nothing">

          <div tal:condition="prev"  class="form-buttons-prev-row">
              <button
                      type="submit"
                      name="form.buttons.prev"
                      class="form-buttons-prev submit-widget button-field btn btn-default pagination-prev fa fa-angle-left"
                      value="">
              </button>
          </div>

          <span class="pagination-text bottom">Result <span tal:content="python: int(view.data.get('page', '0')) + 1">1</span> of <span tal:content="view/count"></span>
      </span>

          <div tal:condition="next" class="form-buttons-next-row">
              <button
                      type="submit"
                      name="form.buttons.next"
                      class="form-buttons-next submit-widget button-field btn btn-default fa fa-angle-right" value="">
              </button>
          </div>
      </div>
  </tal:block>

  <div tal:content="structure view/data_template | nothing"></div>
  <div tal:content="structure view/extras | nothing"></div>

  <tal:block tal:define="sections view/get_sections | nothing">

    <div id="tabs-wrapper" tal:condition="sections">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" id="tabs" role="tablist"  >
        <tal:block tal:repeat="section sections">
          <li class="nav-item" tal:condition="section/item">
            <a class="nav-link" tal:define="utitle section/title"
               tal:attributes="id python:view.title_as_id(utitle) + '-tab';
           href python:'#' + view.title_as_id(utitle);
           aria-controls python:view.title_as_id(utitle);
           title  section/title"
               data-toggle="tab"
               role="tab"
               aria-selected="true"
               tal:content="section/title">Section title here</a>
          </li>
        </tal:block>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content" id="tabContents" >
        <tal:loop repeat="section sections">
          <div class="tab-pane fade"
               tal:condition="section/item"
               tal:define="utitle section/title"
               tal:attributes="id python:view.title_as_id(utitle)"
               role="tabpanel"
               tal:content="structure section"
          >...</div>
        </tal:loop>
      </div>
    </div>
  </tal:block>

  <div class="prev-next-row" tal:define="actions view/actions; next actions/next | nothing; prev actions/prev | nothing">
        <div tal:condition="prev" class="form-buttons-prev-row">
          <div class="widget">
            <button type="submit"  name="form.buttons.prev" class="form-buttons-prev submit-widget button-field btn btn-default pagination-prev fa fa-angle-left" value="">
            </button>
          </div>
        </div>

          <span class="pagination-text bottom">Result <span tal:content="python: int(view.data.get('page', '0')) + 1">1</span> of <span tal:content="view/count"></span></span>

        <div tal:condition="next" class="form-buttons-next-row">
          <div class="widget">
            <button type="submit"
              name="form.buttons.next"
              class="form-buttons-next submit-widget button-field btn btn-default fa fa-angle-right"
              value="">
            </button>
          </div>
    </div>
  </div>

  <tal:def define="subform view/subform | nothing">
  <div class="subform-level-x" tal:condition="subform">
    <div tal:content="structure subform">subform here</div>
  </div>
  </tal:def>
</div>
