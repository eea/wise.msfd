<tal:block
  tal:define="text options/text;
  translation options/translation;
  can_translate options/can_translate;

  background_color python: 'blue' if not translation else 'green';
  translatable_class python: 'translatable ' + background_color if (translation or can_translate) else 'translatable';

  text_extra_class python:'active' if not translation else '';
  text_class python:'tr text ' + text_extra_class;
  btn_text_class python: 'btn btn-light btn-xs btn-translate btn-translate-orig ' + text_extra_class;

  transl_extra_class python:' active' if translation else '';
  trans_class python:'tr transl' + transl_extra_class;
  btn_trans_class python: 'btn btn-light btn-xs btn-translate btn-translate-transl' + transl_extra_class;
  ">
  <td tal:attributes="class translatable_class">
    <div class="w-t" tal:condition="python: text">

      <div class="tr-text">
        <div tal:attributes="class trans_class">
          <span class="text-trans" tal:content="structure translation">
            Translated Text
          </span>
        </div>
        <div tal:attributes="class text_class">
          <span class="text-trans" tal:content="structure text">
            Original Text
          </span>
        </div>
      </div>

      <button type="button" class="read-more-btn" data-toggle="modal" data-target="#read-more-modal">
        Read more
      </button>

      <div class="lang-footer" tal:condition="python: translation or can_translate">

        <button
          tal:condition="can_translate"
          class="btn btn-light btn-xs editTransl"
          data-toggle="modal"
          data-target="#edit-translation"><span class="fa fa-edit"></span></button>

        <tal:cond tal:condition="translation">
          <button tal:attributes="class btn_trans_class" >EN</button>
          <button tal:attributes="class btn_text_class" tal:content="view/country_code">LV</button>
        </tal:cond>

      </div>

    </div>
  </td>
</tal:block>
