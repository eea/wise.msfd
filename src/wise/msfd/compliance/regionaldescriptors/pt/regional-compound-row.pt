<tal:rep tal:repeat="row options/rows">
  <tr>
    <th class="first-header">
      <div tal:content="options/title">First header</div>
    </th>
    <td class="sub-header"
        tal:define="val python: row[0]"
        tal:content="structure val">Subrow header</td>

    <td tal:repeat="val python: row[1]">
      <div tal:content="structure val">Value</div>
    </td>
  </tr>
</tal:rep>

