<div tal:define="assessments options/data">

  <tal:rep tal:repeat="assessment assessments">

    <h4 tal:content="assessment/article">Article 8</h4>

    <table class="table table-condensed assessment-data-table">
      <tbody>
        <tal:def tal:define="colspan python:3">
          <tr>
            <th>Coherence
            </th>
            <td tal:content="structure assessment/coherence"
              tal:attributes="colspan colspan">Text</td>
          </tr>
          <tr>
            <th rowspan="3">Assessment summary</th>
            <td tal:content="assessment/summary"
              tal:attributes="rowspan string:3;
              colspan python:colspan - 2">
              Summary
            </td>
          </tr>
          <tr class="overall-score">
            <th>Overall score</th>
            <td tal:content="python: int(assessment.overall_score)">2</td>
          </tr>
          <tr class="overall-score">
            <th>Overall conclusion</th>
            <td tal:content="assessment/conclusion">Partially adequate</td>
          </tr>
        </tal:def>
      </tbody>
    </table>

  </tal:rep>

</div>
