<ul tal:define="comments view/comments; plone nocall:context/@@plone" class="comments-history">

  <span tal:condition="not:view/comments" class="no-comments">
    <i class="fa fa-comments-o" aria-hidden="true"></i>
    <span>No discussions yet</span>
  </span>

  <li class="comms" tal:repeat="comment comments">
    <div class="comm-crtr">
      <i class="fa fa-user" aria-hidden="true"></i>
      <span tal:content="comment/Creator" class="comment-name">Creator</span>
      <span tal:content="python: plone.toLocalizedTime(comment.created(), long_format=True)"
            class="comment-time">
            Creator
      </span>
    </div>
    <div tal:content="comment/text" class="comment">Comment here</div>
    <i tal:condition="python: view.current_user == comment.Creator()"
       class="comm-del fa fa-times fa-1"
        title="Remove comment"></i>
  </li>

</ul>
