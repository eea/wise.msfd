<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="eea">

  <head>
    <metal:block fill-slot="style_slot">
      <link href="/++resource++static_css/tabs.css" type="text/css" rel="stylesheet" />
      <link href="/++resource++static_css/msfd_search.css" type="text/css" rel="stylesheet" />
    </metal:block>
  </head>

  <body metal:fill-slot="main">
    <div id="layout-contents">
      <div id="wise-search-form" class="full-width-marker">
        <div id="wise-search-form-top"
            tal:define="text_field python: context.text or None" >
          <div tal:condition="text_field" tal:content="structure python: text_field.output"></div>

          <div class="full-width-marker">
            <div class="topnav articles-wrapper row">
              <a class="article-box-anchor"
                tal:define="url python: '/marine/policy-and-reporting/reports-and-assessments/assessment-module-overview'"
                tal:attributes="href url">
                <div class="article-box col-lg-4 col-xs-6" style="height: 210px;">
                  <div class="article-box-wrapper" style="background-color: #2dd2b7;">
                    <div class="article-box-header">
                      <h4 class="tab-subtitle">EU overview</h4>
                      <div class="tab-title">Commission reports and assessments, Member State reports</div>
                    </div>
                    <!-- <div class="article-description">Description here ...</div> -->
                    <a href=""
                      tal:attributes="href url"
                      class="article-link"
                      target="_blank">
                      <span class="link-btn"></span>
                    </a>
                  </div>
                </div>
              </a>
              <a class="article-box-anchor"
                tal:define="url python: '/marine/policy-and-reporting/reports-and-assessments/assessment-per-descriptor'"
                tal:attributes="href url">
                <div class="article-box col-lg-4 col-xs-6" style="height: 210px;">
                  <div class="article-box-wrapper" style="background-color: #2dd2b7;">
                    <div class="article-box-header">
                      <h4 class="tab-subtitle">EU overview</h4>
                      <div class="tab-title">Member State reports per Descriptor</div>
                    </div>
                    <!-- <div class="article-description">Description here ...</div> -->
                    <a href=""
                      tal:attributes="href url"
                      class="article-link"
                      target="_blank">
                      <span class="link-btn"></span>
                    </a>
                  </div>
                </div>
              </a>
            </div>   

            <div class="topnav articles-wrapper row">
              <div class="article-box-anchor" style="width: 33.33333333%;">
                <div class="article-box" style="height: 210px; widthz: 33%;">
                  <div class="article-box-wrapper">
                    <div class="article-box-header">
                      <h4 class="tab-subtitle">Reports</h4>
                      <div class="tab-title">Member State reports by country</div>
                    </div>
                    <div class="country-dropdown-wrapper">
                      <button class="country-dropdown-button">Select country<span class="link-btn"></span></button>
                      <div class="country-dropdown-content">
                        <a tal:repeat="country view/countries"
                            tal:attributes="href python: '/marine/policy-and-reporting/assessment-by-country/' + country[1].lower().replace(' ', '-')"
                            tal:content="python: country[1]">Belgium</a>
                      </div>
                    </div>
                    <!-- <div class="article-description">Access reports for a country</div> -->
                  </div>
                </div>
              </div>     
              <div class="article-box-anchor" style="width: 33.33333333%;">
                <div class="article-box" style="height: 210px;">
                  <div class="article-box-wrapper"> <!-- style="background-color: #fad0c3;" -->
                    <div class="article-box-header">
                      <h4 class="tab-subtitle">Reports</h4>
                      <div class="tab-title">Member State reports by region</div>
                    </div>
                    <div class="country-dropdown-wrapper">
                      <button class="country-dropdown-button">Select region<span class="link-btn"></span></button>
                      <div class="country-dropdown-content" style="width: 240px;height: 188px;">
                        <a tal:repeat="country view/regions"
                            tal:attributes="href python: '/marine/policy-and-reporting/assessment-by-region/' + country[1].lower().replace(' ', '-')"
                            tal:content="python: country[1]">Baltic</a>
                      </div>
                    </div>
                    <!-- <div class="article-description">Access reports for a region</div> -->
                  </div>
                </div>
              </div>  
            </div>         

        </div>
      </div>
    </div>

    <metal:css fill-slot="formtop">
      <script src="/++resource++msfd/js/msfd_search.js"></script>
    </metal:css>

  </body>
</html>
