<td>
  <div class="translatable" tal:define="text options/text; translation options/translation">
    <tal:cond tal:condition="python: text">
      <div class="dropdown" tal:condition="text">
        <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          <span class="fa fa-pencil-square-o fa-sm"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dLabel">
          <li>
            <button class="btn btn-primary btn-s autoTransl">Auto-translate</button>
          </li>
          <li>
            <button class="btn btn-primary btn-s editTransl"
              data-toggle="modal" data-target="#edit-translation">Edit translation</button>
          </li>
        </ul>
      </div>

      <div class="translate-content"
        tal:define="text_extra_class python:'active' if not translation else '';
        transl_extra_class python:'active' if translation else '';">

        <div tal:attributes="class python:'translate-container text ' + text_extra_class;"
          tal:content="text"></div>

        <div tal:attributes="class python:'translate-container transl ' + transl_extra_class;"
          tal:content="translation"></div>

        <div class="translate-language absolute" tal:condition="python: translation">
          <button tal:attributes="class python: 'btn btn-light btn-xs btn-translate btn-translate-orig ' + text_extra_class"
            tal:content="view/country_code">USA</button>
          <button tal:attributes="class python: 'btn btn-light btn-xs btn-translate btn-translate-transl ' + transl_extra_class"
            >EN</button>
        </div>

      </div>
    </tal:cond>
  </div>
</td>
