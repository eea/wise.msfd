<div class="translatable" tal:define="text options/text; translation options/translation">

  <div class="dropdown" tal:condition="text">
    <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dLabel">
      <li>
        <button class="btn btn-primary btn-s autoTransl">Auto-translate</button>
      </li>
      <li>
        <button class="btn btn-primary btn-s editTransl"
          data-toggle="modal" data-target="#edit-translation">Edit translation</button>
      </li>
    </ul>
  </div>

  <div tal:condition="python: translation and text">
    <div class="translate-show text active" tal:content="text"></div>
    <div class="translate-show transl" tal:content="translation"></div>
    <div class="translate-switch">
      <button class="btn btn-light btn-xs btn-translate btn-translate-orig active">LV</button>
      <button class="btn btn-light btn-xs btn-translate btn-translate-transl">EN</button>
    </div>
  </div>
</div>
