<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="eea">

  <body metal:fill-slot="content">

    <div id="layout-contents" tal:define="text context/text | nothing" >
      <div id="wise-search-form" class="full-width-marker">
        <div id="wise-search-form-top">
          <metal:tabs
            metal:use-macro="context/wise-macros/macros/tabs"></metal:tabs>
        </div>

        <div class="start-page-content left-side-form">

          <h1>National descriptors overview for <span tal:content="context/title"></span></h1>

          <div class="nda-link">
            <a href="./../">
              <i class='fa fa-level-up'></i>
              Go to all National Descriptor Assessments
            </a>
          </div>

          <div class="process-state-phase-form">
            <form method="GET" action='./content_status_modify'>
              <div>
                <i class='fa fa-exchange'></i>
                Process state:
                <strong tal:content="view/get_status">Phase 0</strong>

                <div class="phase-selector">
                  <select onchange="javascript:this.form.submit()"
                    name="workflow_action"
                    class="pat-select2"
                    data-pat-select2="width:10em">
                    <option value=''>Choose action...</option>
                    <tal:rep repeat="trans view/get_transitions">
                      <option tal:content="trans/title" tal:attributes="value trans/id">Send to Phase 0</option>
                    </tal:rep>
                  </select>
                </div>
              </div>
            </form>
          </div>

          <div tal:repeat="region view/get_regions">
            <h4 tal:content="region/Title">Region name</h4>
            <hr />

            <table class="table as-table-overview table-striped">
              <thead>
                <tr>
                  <th>Descriptor</th>
                  <th tal:repeat='art view/get_articles'>
                    <!-- <span tal:replace="art">Art0</span> -->
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr tal:repeat="desc region/contentValues">
                  <th>
                    <span tal:content="desc/title_or_id">D0</span>
                  </th>
                  <!-- TODO: resort articles here -->
                  <td tal:repeat="assessment desc/contentValues">
                    <a class="btn btn-primary btn-xs" href="" tal:attributes="href assessment/absolute_url">
                      <span tal:content="assessment/title">Art0</span>:
                      <span class="as-state-label" tal:content="python: view.get_status(assessment)">State</span>
                    </a>
                    <div>
                      <blockquote tal:condition="assessment/assessment_summary">
                        <p tal:content="assessment/assessment_summary" >
                          Summary here
                        </p>
                      </blockquote>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </body>
</html>
