<div tal:define="assessment options/assessment">
  <!-- <span tal:content="data"></span> -->
  <table class="table table-condensed assessment-data-table">
    <tbody>
      <tr>
        <th>GESComponent</th>
        <th tal:repeat="g assessment/gescomponents">
          <span tal:replace="g">D0C0</span>
        </th>
        <!-- TODO: add "conclusion score" and "Weighting" as titles -->
        <th>Conclusion</th>
        <th>Score</th>
      </tr>
      <tal:rep tal:repeat="row assessment/answers">
        <tr>
          <th rowspan="2" tal:content="row/question">Question</th>
          <td tal:repeat="value row/values" tal:content="value">X</td>
          <td tal:content="row/conclusion">X</td>
          <td tal:content="row/score">X</td>
        </tr>
        <tr>
          <td colspan="50" tal:content="row/summary">Summary</td>
        </tr>
      </tal:rep>
      <tr>
        <th>Assessment summary</th>
        <td colspan="50" tal:content="assessment/assessment_summary">Summary text</td>
      </tr>
      <tr>
        <th>Recommendations</th>
        <td colspan="50" tal:content="assessment/recommendations">Recomendation text</td>
      </tr>
    </tbody>
  </table>
</div>
