<div class="overflow-table"
  tal:define="title options/title; data options/data">
  <h4 tal:content="title">2018 Member State Report</h4>
  <div tal:condition="view/is_changed">
    <span>There are updates in the database, refresh table?</span>
    <tal:form tal:define="form python: view.add_form(view)">
        <div tal:content="structure form">
          refresh
        </div>
    </tal:form>

  </div>
  <div tal:condition="data" tal:repeat="info data">
    <div
      tal:define="muid python:info[0]; muid_data python: info[1];"
      >
      <h3 tal:content="muid">LV-01</h3>
      <table class="table table-bordered table-striped"
        >
        <tr tal:repeat="row muid_data">
          <th tal:content="python: row[0]">Element</th>
          <td tal:repeat="r python: row[1]">
            <span tal:attributes="style python:'background-color: green' if isinstance(r, list) else ''"
                  tal:content="r">Value</span>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
