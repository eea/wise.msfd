<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="eea">

  <body metal:fill-slot="content">

    <div id="layout-contents" tal:define="text context/text | nothing" >
      <div id="wise-search-form" class="full-width-marker">
        <div id="wise-search-form-top">
          <metal:tabs
            metal:use-macro="context/wise-macros/macros/tabs"></metal:tabs>
        </div>

        <div class="start-page-content left-side-form">

          <h1>
            <span tal:replace="view/article">Art0</span> assessment on
            <span tal:replace="view/descriptor">D0</span> for
            <span tal:replace="view/country_code">US</span>
          </h1>

          <div style="margin-bottom: 1em; top: -0.8em; position: relative">
            <a href="./../../">
              <i class='fa fa-level-up'></i>
              Go to National Descriptor Assessment
            </a>
          </div>

          <style>
            .nat-desc-art-menu {
            margin-top: 1em;
            }
            .nat-desc-art-menu ul {
            display: flex;
            margin-left: 0em !important;
            }
            .nat-desc-art-menu li {
            padding: 1em;
            list-style-type: none;
            display: block;
            margin-right: 1em;
            background-color: #EEE;
            }
            .assessment-data-table {
            margin: 0em;
            }
            .assessment-data-table td {
            min-width: 4em;
            border: 1px solid #CCC;
            background-color: white;
            }
            .assessment-data-table th {
            background-color: #EEE;
            text-align: right;
            width: 15%;
            }
            .assessment-header {
            margin-bottom: 1em;
            }
            .assessment-header th {
            width: 15%;
            }
            .overall-score th,
            .overall-score td {
            width: 8%;
            }

          </style>

          <div class="nat-desc-art-menu">
            <ul>
              <li><a href="./@@view-report-data-2012"><i class='fa fa-table'></i> View 2012 Report Data</a></li>
              <li><a href="./@@view-report-data-2018"><i class='fa fa-table'></i> View 2018 Report Data</a></li>
              <li tal:condition="python: view.check_permission('wise.msfd: Edit Assessment')">
                <a href="./@@edit-assessment-data-2018">
                  <i class='fa fa-edit'></i> Edit 2018 Report Data
                </a>
              </li>
              <li>
                <form method="GET" action='./content_status_modify'>
                  <div>
                    <i class='fa fa-exchange'></i>
                    Process state:
                    <span tal:replace="view/get_status">Phase 0</span>
                    &nbsp;
                    &nbsp;

                    <!-- <div style="float: right"> -->
                      <select onchange="javascript:this.form.submit()" name="workflow_action">
                        <option value=''>Choose action...</option>
                        <tal:rep repeat="trans view/get_transitions">
                          <option tal:content="trans/title"
                            tal:attributes="value trans/id">Send to Phase 0</option>
                        </tal:rep>
                      </select>
                    <!-- </div> -->
                  </div>
                </form>

              </li>
            </ul>
          </div>

          <div style="margin-bottom: 2em">
            <h3>2018 Assessment</h3>
            <div style="background-color: #DDD; border-color: 1px solid #BBB; padding: 1em;">
              <div tal:replace="structure view/assessment_header_2018"></div>
              <div tal:replace="structure view/assessment_data_2018"></div>
            </div>
            <h3>2012 Assessment</h3>
            <div style="background-color: #DDD; border-color: 1px solid #BBB; padding: 1em;">
              <div tal:replace="structure view/assessment_header_2012"></div>
              <div tal:replace="structure view/assessment_data_2012"></div>
            </div>
          </div>

          <div style="background-color: #DDD; border-color: 1px solid #BBB; padding: 1em;">
            <div tal:content="structure context/@@comments-view"></div>
          </div>

        </div>
      </div>
    </div>

  </body>
</html>
