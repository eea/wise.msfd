<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered table-striped first-table ">
      <tr>
        <td>Reported by</td>
        <td tal:attributes="colspan view/colspan"
           tal:content="options/report_by"/>
      </tr>
      <tr>
        <td>Assessors</td>
        <td tal:attributes="colspan view/colspan"
            tal:content="options/assessors">
        </td>
      </tr>
      <tr>
        <td>Date assessed</td>
        <td tal:attributes="colspan view/colspan"
           tal:content="options/assess_date"/>
      </tr>
      <tr>
        <td>Commission technical report</td>
        <td tal:attributes="colspan view/colspan">
          <a tal:attributes="href python: options['source_file'][1]"
           tal:content="python: options['source_file'][0]"/>
        </td>
      </tr>
    </table>
  </div>
</div>
