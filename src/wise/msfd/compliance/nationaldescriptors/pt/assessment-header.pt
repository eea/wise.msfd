<div class="row">
  <div class="col-md-12">
    <table class="table table-condensed assessment-data-table assessment-header">
      <tr>
        <th>Reported by</th>
        <td tal:attributes="colspan view/colspan"
           tal:content="options/report_by"/>
      </tr>
      <tr>
        <th>Assessors</th>
        <td tal:attributes="colspan view/colspan"
            tal:content="options/assessors">
        </td>
      </tr>
      <tr>
        <th>Date assessed</th>
        <td tal:attributes="colspan view/colspan"
           tal:content="options/assess_date"/>
      </tr>
      <tr>
        <th>Commission technical report</th>
        <td tal:attributes="colspan view/colspan"
          tal:define="sf options/source_file;
          href python: sf[1];
          text python: sf[0];
          ">
          <a tal:attributes="href href" tal:content="text"/>
        </td>
      </tr>
    </table>
  </div>
</div>
