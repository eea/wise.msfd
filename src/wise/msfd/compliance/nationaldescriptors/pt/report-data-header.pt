<div class="row">
  <div class="col-md-12">

    <!-- <div metal:use&#45;macro="context/@@compliance&#45;nav&#45;macros/macros/nav"></div> -->
    <div metal:use-macro="context/global_statusmessage/macros/portal_message">
      Status message
    </div>

    <h3 class="report-title" tal:content="options/title">201X Member State Report</h3>

    <div id="report-data-navigation">
      <div class="back-to-art">
        <a href="./">
          <i class='fa fa-level-up'></i>
          Back to Assessment overview
        </a>
      </div>

      <div class="report-nav fixed">
        <div class="nav-wrapper">
          <div class="nav-header">
            <button id="report-nav-toggle" class="nav-toggle">
              <i class="fa fa-bars"></i>
            </button>
          </div>

          <div class="nav-body">

            <div class="art-title">
              <a href="" tal:attributes="href view/_country_folder/absolute_url"
                tal:content="view/country_name">EU</a>
            </div>

            <div class="nav-articles">
              <div tal:repeat="art view/_descriptor_folder/contentValues" class="art">

                <div class="art-middle">
                  <a tal:content="art/title_or_id"
                    tal:attributes="href art/absolute_url"
                    target="_blank">
                    Article 9
                  </a>
                </div>
                <div class="art-links">
                  <a href="" tal:attributes="href string:${art/absolute_url}/@@edit-assessment-data-2018">Edit</a>
                  <a tal:attributes="href string:${art/absolute_url}/@@view-report-data-2018"
                    target="_blank">
                    2018</a>
                    <a tal:attributes="href string:${art/absolute_url}/@@view-report-data-2012"
                      target="_blank">
                      2012</a>
                      <a tal:attributes="href string:${art/absolute_url}/@@view-report-data-2012-like-2018"
                        target="_blank">
                        2012 (II)</a>
                      </div>
                    </div>

            </div>
          </div>
        </div>
      </div>

    </div>

    <table class="table table-bordered table-striped table-condensed">
      <tr>
        <td>Member State</td>
        <td tal:attributes="colspan view/colspan" tal:content="python:view.country_name"/>
      </tr>
      <tr>
        <td>Region(s) and subregion(s)</td>
        <td tal:attributes="colspan view/colspan" tal:content="view/country_region_name"/>
      </tr>
      <tr>
        <td>Article reported</td>
        <td tal:attributes="colspan view/colspan" tal:content="view/article_name"/>
      </tr>
      <tr tal:condition="options/source_file">
        <td>Source file of Member State</td>
        <td tal:attributes="colspan view/colspan">
          <a tal:attributes="href python: options['source_file'][1]"
            tal:content="python: options['source_file'][0]">Filename</a>
          <div tal:condition="options/factsheet">
            <a tal:attributes="href options/factsheet">HTML Factsheet</a>
          </div>
        </td>
      </tr>
      <tr tal:condition="options/report_by">
        <td>Reported by</td>
        <td tal:attributes="colspan view/colspan" tal:content="options/report_by"/>
      </tr>
      <tr>
        <td>Date report due</td>
        <td tal:attributes="colspan view/colspan" tal:content="options/report_due"/>
      </tr>
      <tr tal:condition="options/report_date">
        <td>Date reported by Member State</td>
        <td tal:attributes="colspan view/colspan" tal:content="options/report_date"/>
      </tr>
      <tr>
        <td>Descriptor</td>
        <td tal:attributes="colspan view/colspan" tal:content="python:view.descriptor_obj.title"/>
      </tr>
    </table>

    <div id="download-report-data-form">
      <div class="crt-def">
        <button type="button"
          class="btn btn-primary btn-small btn-success"
          data-toggle="modal" data-target="#reportdata-help">
          Harvesting details
        </button>
      </div>

      <form method="POST" action="" tal:attributes="action request/URL0">
        <button name="download" class="btn btn-primary">View report data in Excel</button>
        <button name="translate" class="btn btn-secondary">Auto-translate</button>
      </form>

      <div class="modal fade" id="reportdata-help" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Report data harvesting</h4>
            </div>

            <div class="modal-body">
              <pre tal:content="options/help_text | nothing"></pre>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>
