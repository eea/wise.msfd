<div class="row">
  <div class="col-md-12">

    <h3 tal:content="options/title">201X Member State Report</h3>
    <div class="back-to-art">
      <a href="./">
        <i class='fa fa-level-up'></i>
        Back to Assessment overview
      </a>
    </div>

    <table class="table table-bordered table-striped table-condensed">
      <tr>
        <td>Member State</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="python:view.country_name"/>
      </tr>
      <tr>
        <td>Descriptor</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="python:view.desc_label"/>
      </tr>
      <tr>
        <td>Region(s) and subregion(s)</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="python:', '.join(view.regions)"/>
      </tr>
      <tr>
        <td>Article reported</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="view/article"/>
      </tr>
      <tr>
        <td>Reported by</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="options/report_by"/>
      </tr>
      <tr>
        <td>Source file of Member State</td>
        <td tal:attributes="colspan view/colspan">

          <a tal:attributes="href python: options['source_file'][1]"
            tal:content="python: options['source_file'][0]">Filename</a>

          <div tal:condition="options/factsheet">
            <a tal:attributes="href options/factsheet">HTML Factsheet</a>
          </div>

        </td>
      </tr>
      <tr>
        <td>Date report due</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="options/report_due"/>
      </tr>
      <tr>
        <td>Date reported by Member State</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="options/report_date"/>
      </tr>
    </table>

    <div id="download-report-data-form">
      <form method="POST" action="" tal:attributes="action request/URL0">
        <input type="hidden" name="download" value="yes" />
        <button class="btn btn-primary">Download report data as Excel</button>
      </form>
    </div>

  </div>
</div>
