<div class="row">
  <div class="col-md-12">

    <!-- <div metal:use&#45;macro="context/@@compliance&#45;nav&#45;macros/macros/nav"></div> -->

    <h3 tal:content="options/title">201X Member State Report</h3>

    <div class="back-to-art">
      <a href="./">
        <i class='fa fa-level-up'></i>
        Back to Assessment overview
      </a>
    </div>

    <table class="table table-bordered table-striped table-condensed">
      <tr>
        <td>Member State</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="python:view.country_name"/>
      </tr>
      <tr>
        <td>Descriptor</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="python:view.desc_label"/>
      </tr>
      <tr>
        <td>Region(s) and subregion(s)</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="view/country_region_name"/>
      </tr>
      <tr>
        <td>Article reported</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="view/article_name"/>
      </tr>
      <tr>
        <td>Reported by</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="options/report_by"/>
      </tr>
      <tr>
        <td>Source file of Member State</td>
        <td tal:attributes="colspan view/colspan">

          <a tal:attributes="href python: options['source_file'][1]"
            tal:content="python: options['source_file'][0]">Filename</a>

          <div tal:condition="options/factsheet">
            <a tal:attributes="href options/factsheet">HTML Factsheet</a>
          </div>

        </td>
      </tr>
      <tr>
        <td>Date report due</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="options/report_due"/>
      </tr>
      <tr>
        <td>Date reported by Member State</td>
        <td tal:attributes="colspan view/colspan"
          tal:content="options/report_date"/>
      </tr>
    </table>

    <div id="download-report-data-form">
      <div class="crt-def">
        <button type="button"
          class="btn btn-primary btn-small btn-success"
          data-toggle="modal" data-target="#reportdata-help">
          Harvesting details
        </button>
      </div>

      <form method="POST" action="" tal:attributes="action request/URL0">
        <button name="download" class="btn btn-primary">View report data in Excel</button>
        <button name="translate" class="btn btn-secondary">Auto-translate</button>
      </form>

      <div class="modal fade" id="reportdata-help" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Report data harvesting</h4>
            </div>

            <div class="modal-body">
              <pre tal:content="options/help_text | nothing"></pre>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>
