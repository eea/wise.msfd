<div class="row">
  <div class="col-md-12">

    <!-- <div metal:use&#45;macro="context/@@compliance&#45;nav&#45;macros/macros/nav"></div> -->

    <div metal:use-macro="context/global_statusmessage/macros/portal_message">
      Status message
    </div>

    <h3 class="report-title" tal:content="structure options/title">201X Member State Report</h3>

    <div id="report-data-navigation"
      tal:condition="python: options.get('show_navigation') != False and view.can_view_assessment_data">
      <div class="back-to-art">
        <a href="./">
          <i class='fa fa-level-up'></i>
          Back to Assessment overview
        </a>
      </div>

      <div class="report-nav fixed">
        <div class="nav-wrapper">
          <div class="nav-header">
            <button id="report-nav-toggle" class="nav-toggle">
              <i class="fa fa-bars"></i>
            </button>
          </div>

          <div class="nav-body">

            <div class="art-title">
              <a href="" tal:attributes="href view/_country_folder/absolute_url"
                tal:content="view/country_name"
                target="_blank">EU</a>
            </div>

            <div class="nav-articles"
                tal:condition="view/is_primary_article">
              <div tal:repeat="art view/_descriptor_folder/contentValues" class="art">
                <div class="art-middle">
                  <a tal:content="art/title_or_id"
                    tal:attributes="href art/absolute_url"
                    target="_blank">
                    Article 9
                  </a>
                </div>
                <div class="art-links">
                  <a href="" tal:attributes="href string:${art/absolute_url}/@@edit-assessment-data-2018" target="_blank">Edit</a>
                  <a tal:attributes="href string:${art/absolute_url}/@@view-report-data-2018"
                    target="_blank">
                    2018</a>
                  <a tal:attributes="href string:${art/absolute_url}/@@view-report-data-2012"
                    target="_blank">
                    2012</a>
                </div>
              </div>
            </div>

            <div class="nav-articles"
                tal:condition="python: not view.is_primary_article">
              <div tal:repeat="art view/get_secondary_article_folders" class="art">
                <div class="art-middle">
                  <a tal:content="art/title_or_id"
                    tal:attributes="href art/absolute_url"
                    target="_blank">
                    Article 9
                  </a>
                </div>
                <div class="art-links">
                  <a href="" tal:attributes="href string:${art/absolute_url}/@@edit-assessment-data-2018" target="_blank">Edit</a>
                  <a tal:attributes="href string:${art/absolute_url}/@@view-report-data-2018"
                    target="_blank">
                    Report(s)</a>
                  <!--<a tal:attributes="href string:${art/absolute_url}/@@view-report-data-2012"-->
                    <!--target="_blank">-->
                    <!--2012</a>-->
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>

    <table class="table table-bordered table-striped table-condensed">
      <tr>
        <td>Member State</td>
        <td tal:content="python:view.country_name"/>
      </tr>
      <tr tal:condition="view/is_primary_article">
        <td>Region(s) and subregion(s)</td>
        <td tal:content="view/country_region_name"/>
      </tr>
      <tr tal:condition="view/is_primary_article">
        <td>Descriptor</td>
        <td tal:content="python:view.descriptor_obj.title"/>
      </tr>
      <tr>
        <td>Article reported</td>
        <td tal:content="view/article_name"/>
      </tr>
      <tr tal:condition="options/source_file">
        <td>Source file of Member State</td>
        <td>
          <tal:cond tal:condition="python: 'multiple_source_files' not in options or not options['multiple_source_files']">
            <a tal:attributes="href python: options['source_file'][1]"
              tal:content="python: options['source_file'][0]"
              target="_blank">Filename</a>
            <div tal:condition="options/factsheet">
              <a tal:attributes="href options/factsheet" target="_blank">HTML Factsheet</a>
            </div>
          </tal:cond>
          <tal:cond tal:condition="python: 'multiple_source_files' in options and options['multiple_source_files']">
            <div tal:repeat="source_file options/source_file">
              <a tal:attributes="href python: source_file[1]"
                tal:content="python: source_file[0]"
                target="_blank">Filename</a>
            </div>
          </tal:cond>
        </td>
      </tr>
      <tr tal:condition="options/report_by">
        <td>Reported by</td>
        <td tal:content="options/report_by"/>
      </tr>
      <tr tal:condition="options/report_due">
        <td>Date report due</td>
        <td tal:content="options/report_due"/>
      </tr>
      <tr tal:condition="options/report_date">
        <td>Date reported by Member State</td>
        <td tal:content="options/report_date"/>
      </tr>
    </table>

    <div id="download-report-data-form" tal:condition="python: options.get('show_navigation') != False">
      <form method="POST" action="" tal:attributes="action request/getURL">
        <button name="download" class="btn btn-primary">View report data in Excel</button>
        <button name="translate" class="btn btn-secondary"
          tal:condition="view/can_view_assessment_data">Auto-translate</button>
      </form>
    </div>

  </div>
</div>
