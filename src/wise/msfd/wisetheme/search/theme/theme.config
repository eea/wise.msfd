/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site        : 'default';
@reset       : 'default';

/* Elements */
@button      : 'basic';
@container   : 'basic';
@divider     : 'basic';
@flag        : 'basic';
@header      : 'basic';
@icon        : 'basic';
@image       : 'basic';
@input       : 'basic';
@label       : 'basic';
@list        : 'basic';
@loader      : 'basic';
@placeholder : 'basic';
@rail        : 'basic';
@reveal      : 'basic';
@segment     : 'basic';
@step        : 'basic';

/* Collections */
@breadcrumb  : 'basic';
@form        : 'basic';
@grid        : 'basic';
@menu        : 'basic';
@message     : 'basic';
@table       : 'basic';

/* Modules */
@accordion   : 'basic';
@checkbox    : 'basic';
@dimmer      : 'basic';
@dropdown    : 'basic';
@embed       : 'basic';
@modal       : 'basic';
@nag         : 'basic';
@popup       : 'basic';
@progress    : 'basic';
@rating      : 'basic';
@search      : 'basic';
@shape       : 'basic';
@sidebar     : 'basic';
@sticky      : 'basic';
@tab         : 'basic';
@transition  : 'basic';

/* Views */
@ad          : 'basic';
@card        : 'basic';
@comment     : 'basic';
@feed        : 'basic';
@item        : 'basic';
@statistic   : 'basic';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : '~semantic-ui-less/themes';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import (multiple) "~semantic-ui-less/theme.less";

@fontPath : '~semantic-ui-less/themes/@{theme}/assets/fonts';

/* @import (multiple) "~@eeacms/search-less/theme.less"; */

/* End Config */

