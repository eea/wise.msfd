<?xml version="1.0"?>
<dc-workflow workflow_id="assessment_workflow" title="DC Workflow Definition" description="" state_variable="review_state" initial_state="in_work" manager_bypass="False">
 <permission>View</permission>
 <state state_id="approved" title="">
  <exit-transition transition_id="send_back_to_final_review"/>
 </state>
 <state state_id="in_draft_review" title="">
  <exit-transition transition_id="send_back_to_work"/>
  <exit-transition transition_id="send_for_final_review"/>
 </state>
 <state state_id="in_final_review" title="">
  <exit-transition transition_id="approve"/>
  <exit-transition transition_id="send_for_draft_review"/>
 </state>
 <state state_id="in_work" title="">
  <exit-transition transition_id="send_for_draft_review"/>
 </state>
 <transition transition_id="approve" title="Approve assessment" new_state="approved" trigger="USER" before_script="" after_script="">
  <guard></guard>
 </transition>
 <transition transition_id="send_back_to_draft" title="Send back to draft review" new_state="in_draft_review" trigger="USER" before_script="" after_script="">
  <guard> </guard>
 </transition>
 <transition transition_id="send_back_to_final_review" title="" new_state="" trigger="USER" before_script="" after_script="">
  <guard> </guard>
 </transition>
 <transition transition_id="send_back_to_work" title="Send back to work" new_state="in_work" trigger="USER" before_script="" after_script="">
  <guard> </guard>
 </transition>
 <transition transition_id="send_for_draft_review" title="Send for draft review" new_state="in_draft_review" trigger="USER" before_script="" after_script="">
  <guard>
  </guard>
 </transition>
 <transition transition_id="send_for_final_review" title="Send for final review" new_state="in_final_review" trigger="USER" before_script="" after_script="">
  <guard>
  </guard>
 </transition>

 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>

   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>

   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>

   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>

   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>

   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>

</dc-workflow>
