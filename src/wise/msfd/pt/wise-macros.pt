<metal:macro define-macro="tabs">
  <div id="mainform-tabs">
    <ul class="nav nav-pills topnav hidden-xs">
      <tal:rep tal:repeat="info view/main_forms">
        <li tal:define="name python:info[0];
          maintitle python: info[1][0];
          subtitle python: info[1][1];
          active python: view.name == name"
          tal:attributes="class python: active and 'tab-active' or ''"
          >
          <a href=""
            tal:attributes="href string:./@@${name}"
            >
            <span tal:content="maintitle">Article X</span>
            <span tal:content="subtitle">Subtitle here</span>
          </a>
        </li>
      </tal:rep>
    </ul>

    <div class="visible-xs" style="clear: both;">
      <div tal:content="view/tab_select_label | string:Select article:">
        Select article:
      </div>
      <select class="notselect" id="mobile-select-article" >
        <tal:rep tal:repeat="info view/main_forms" >
          <tal:block tal:define="name python:info[0];
            maintitle python: info[1][0];
            subtitle python: info[1][1];
            active python: view.name == name">
            <option tal:attributes="value string:./@@${name}; data-maintitle maintitle; data-subtitle subtitle;
              selected python: active and 'selected'"
              tal:content="python: info[1][0] + ' ' + info[1][1]"
              >
            </option>
          </tal:block>
        </tal:rep>
      </select>
    </div>
  </div>
</metal:macro>

<metal:macro define-macro="form-collapse">
    <tal:def define="dataTarget string: .${formid}-collapse">
        <div data-toggle='collapse' tal:attributes="data-target dataTarget">
            <div metal:define-slot="header" tal:content="dataTarget">
            </div>
        </div>
        <div tal:attributes="class string: ${formid}-collapse">
            <div metal:define-slot="content">
            </div>
        </div>
    </tal:def>

</metal:macro>
